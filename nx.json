{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"npmScope": "monorepo-template",
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": [
					"build",
					"lint",
					"test",
					"e2e"
				]
			}
		}
	},
	"implicitDependencies": {
		"package.json": {
			"dependencies": "*",
			"devDependencies": "*"
		},
		".eslintrc.json": "./eslintrc.js",
		".prettierrc": "./prettier.config.js"
	},
	"targetDefaults": {
		"build": {
			"dependsOn": [
				"^build"
			]
		},
		"test": {
			"inputs": [
				"default",
				"^default",
				"{workspaceRoot}/jest.preset.js"
			]
		}
	},
	"generators": {
		"@nx/react": {
			"application": {
				"style": "none",
				"linter": "eslint",
				"bundler": "webpack",
				"babel": true
			},
			"component": {
				"style": "none"
			},
			"library": {
				"style": "none",
				"linter": "eslint"
			}
		}
	}
}